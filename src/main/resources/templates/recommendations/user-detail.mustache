{{>layout/header}}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">사용자 추천 활동 상세</h4>
                    <div>
                        <a href="/recommendations" class="btn btn-sm btn-light me-2">활동 목록</a>
                        <a href="/recommendations/user-list" class="btn btn-sm btn-light">추천 목록</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0">{{userRecommendation.title}}</h5>
                            <span class="badge 
                                {{#userRecommendation.isPending}}bg-warning text-dark{{/userRecommendation.isPending}}
                                {{#userRecommendation.isApproved}}bg-success{{/userRecommendation.isApproved}}
                                {{#userRecommendation.isRejected}}bg-danger{{/userRecommendation.isRejected}}
                            ">{{userRecommendation.statusText}}</span>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="text-muted mb-1">작성자: {{userRecommendation.author}}</p>
                                <p class="text-muted">작성일: {{userRecommendation.createdAt}}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">활동 내용</h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-0">{{userRecommendation.content}}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">추천 이유</h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-0">{{userRecommendation.reason}}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <div>
                            {{#userRecommendation.isAuthor}}
                                <form action="/recommendations/user/{{userRecommendation.id}}/delete" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('정말 삭제하시겠습니까?');">삭제하기</button>
                                </form>
                            {{/userRecommendation.isAuthor}}
                        </div>
                        
                        {{#userRecommendation.isPending}}
                            <div>
                                <form action="/recommendations/user/{{userRecommendation.id}}/reject" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger me-2" onclick="return confirm('정말 기각하시겠습니까?');">기각하기</button>
                                </form>
                                <form action="/recommendations/user/{{userRecommendation.id}}/approve" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-success" onclick="return confirm('이 활동을 추천 목록에 추가하시겠습니까?');">추가하기</button>
                                </form>
                            </div>
                        {{/userRecommendation.isPending}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{>layout/footer}} 