{{>layout/header}}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>{{recommendation.title}}</h4>
                </div>
                <div class="card-body">
                    {{#errorMessage}}
                        <div class="alert alert-danger">
                            {{errorMessage}}
                        </div>
                    {{/errorMessage}}
                    
                    <div class="mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="recommendation-content">
                                    {{recommendation.description}}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/recommendations" class="btn btn-secondary">목록으로</a>
                        <div>
                            <a href="/recommendations/edit/{{recommendation.id}}" class="btn btn-outline-secondary">수정</a>
                            <form action="/recommendations/delete/{{recommendation.id}}" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('정말 삭제하시겠습니까?');">삭제</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{>layout/footer}} 