{{>layout/header}}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>비밀번호 재설정</h4>
                </div>
                <div class="card-body">
                    {{#errorMessage}}
                        <div class="alert alert-danger">
                            {{errorMessage}}
                        </div>
                    {{/errorMessage}}
                    
                    <form action="/auth/reset-password" method="post">
                        <input type="hidden" name="token" value="{{token}}">
                        
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">새 비밀번호</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required autofocus>
                            <small class="form-text text-muted">비밀번호는 영문자, 숫자, 특수문자를 포함하여 8자 이상이어야 합니다.</small>
                            {{#newPassword}}
                                <div class="invalid-feedback d-block">
                                    {{newPassword}}
                                </div>
                            {{/newPassword}}
                        </div>
                        
                        <div class="mb-3">
                            <label for="newPasswordConfirm" class="form-label">새 비밀번호 확인</label>
                            <input type="password" class="form-control" id="newPasswordConfirm" name="newPasswordConfirm" required>
                            {{#newPasswordConfirm}}
                                <div class="invalid-feedback d-block">
                                    {{newPasswordConfirm}}
                                </div>
                            {{/newPasswordConfirm}}
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">비밀번호 변경</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{>layout/footer}} 