{{>layout/header}}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>후기 수정</h4>
                </div>
                <div class="card-body">
                    {{#errorMessage}}
                        <div class="alert alert-danger">
                            {{errorMessage}}
                        </div>
                    {{/errorMessage}}
                    
                    <form action="/reviews/edit/{{reviewId}}" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label">제목</label>
                            <input type="text" class="form-control" id="title" name="title" value="{{title}}" required>
                            {{#validationErrors.title}}
                                <div class="text-danger">{{.}}</div>
                            {{/validationErrors.title}}
                        </div>
                        
                        <div class="mb-3">
                            <label for="content" class="form-label">내용</label>
                            <textarea class="form-control" id="content" name="content" rows="10" required>{{content}}</textarea>
                            {{#validationErrors.content}}
                                <div class="text-danger">{{.}}</div>
                            {{/validationErrors.content}}
                        </div>
                        
                        <div class="mb-3">
                            <label for="imageFile" class="form-label">이미지 첨부 (선택사항)</label>
                            {{#imageUrl}}
                                <div class="mb-2">
                                    <img src="{{imageUrl}}" alt="현재 이미지" class="img-thumbnail" style="max-height: 100px">
                                    <div class="form-text">현재 이미지를 유지하려면 새 파일을 선택하지 마세요.</div>
                                </div>
                                <input type="hidden" name="existingImageUrl" value="{{imageUrl}}">
                            {{/imageUrl}}
                            <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*">
                            <div class="form-text">JPG, PNG 형식의 이미지 파일을 업로드할 수 있습니다.</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">별점</label>
                            <div class="star-rating">
                                <div class="rating">
                                    <input type="radio" id="star5" name="starRating" value="5" {{#isStar5}}checked{{/isStar5}} required>
                                    <label for="star5" class="star">★</label>
                                    <input type="radio" id="star4" name="starRating" value="4" {{#isStar4}}checked{{/isStar4}}>
                                    <label for="star4" class="star">★</label>
                                    <input type="radio" id="star3" name="starRating" value="3" {{#isStar3}}checked{{/isStar3}}>
                                    <label for="star3" class="star">★</label>
                                    <input type="radio" id="star2" name="starRating" value="2" {{#isStar2}}checked{{/isStar2}}>
                                    <label for="star2" class="star">★</label>
                                    <input type="radio" id="star1" name="starRating" value="1" {{#isStar1}}checked{{/isStar1}}>
                                    <label for="star1" class="star">★</label>
                                </div>
                            </div>
                            {{#validationErrors.starRating}}
                                <div class="text-danger">{{.}}</div>
                            {{/validationErrors.starRating}}
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="/reviews/{{reviewId}}" class="btn btn-secondary">취소</a>
                            <button type="submit" class="btn btn-primary">수정 완료</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }
    
    .rating input {
        display: none;
    }
    
    .rating label {
        cursor: pointer;
        font-size: 30px;
        color: #ddd;
        transition: color 0.3s;
        margin-right: 5px;
    }
    
    .rating input:checked ~ label {
        color: #ffc107;
    }
    
    .rating label:hover,
    .rating label:hover ~ label,
    .rating input:hover ~ label {
        color: #ffdb70;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // 별점 초기 표시 (수정된 부분)
        const starRating = document.querySelector('input[name="starRating"]:checked');
        if (starRating) {
            const stars = document.querySelectorAll('.rating label');
            const rating = parseInt(starRating.value);
            
            // 선택된 별점과 그 왼쪽의 별들에 색상 적용
            for (let i = 0; i < stars.length; i++) {
                const starValue = 5 - i; // 별점 값은 5부터 1까지 (오른쪽에서 왼쪽으로)
                if (starValue <= rating) {
                    stars[i].style.color = '#ffc107'; // 선택된 별 색상
                }
            }
        }

        // 별점 라벨 클릭 이벤트 추가
        const starLabels = document.querySelectorAll('.rating label');
        starLabels.forEach(function(label) {
            label.addEventListener('click', function() {
                const radioId = this.getAttribute('for');
                const radio = document.getElementById(radioId);
                if (radio) {
                    radio.checked = true;
                    
                    // 모든 별 색상 초기화
                    starLabels.forEach(l => l.style.color = '#ddd');
                    
                    // 선택된 별점과 그 왼쪽의 별들에 색상 적용
                    const rating = parseInt(radio.value);
                    for (let i = 0; i < starLabels.length; i++) {
                        const starValue = 5 - i; // 별점 값은 5부터 1까지 (오른쪽에서 왼쪽으로)
                        if (starValue <= rating) {
                            starLabels[i].style.color = '#ffc107';
                        }
                    }
                }
            });
        });
    });
</script>

{{>layout/footer}} 