{{>layout/header}}

<div class="container">
    <div class="row mt-5">
        <div class="col-md-3">
            {{>mypage/sidebar}}
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>나의 확정 계획</h4>
                </div>
                <div class="card-body">
                    {{^plans}}
                        <div class="alert alert-info">
                            아직 확정된 계획이 없습니다. <a href="/random" class="alert-link">랜덤 추천</a>에서 계획을 확정해보세요!
                        </div>
                    {{/plans}}
                    
                    {{#plans}}
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">{{title}}</h5>
                                <p class="card-text">{{description}}</p>
                                <p class="text-muted">확정일: {{confirmedAt}}</p>
                                {{^hasReview}}
                                    <a href="/reviews/write/{{id}}" class="btn btn-primary">후기 작성</a>
                                {{/hasReview}}
                                {{#hasReview}}
                                    <span class="badge bg-success">후기 작성 완료</span>
                                {{/hasReview}}
                            </div>
                        </div>
                    {{/plans}}
                </div>
            </div>
        </div>
    </div>
</div>

{{>layout/footer}} 